<%- include("partials/header")-%>
<div class="button">

    <form action="/compose" method="get">
        <button style="background-color: #1abc9c;" type="submit" class="btn btn-lg btn-primary">Add New Blog + </button>
    </form>
</div>
<h1>Home</h1>

<p><%= startingContent %></p>


<%  posts.forEach(function(post){   %>
    <h1><%= post.title%></h1>
    <p><%= post.content.substring(0,100)+" ..." %>
        <%if(post.content.length>100){%>

            <a href="/posts/<%=post._id%>">Read More</a>
      <%  }%>
    </p>
    <%})%>
    

<%- include("partials/footer")-%>